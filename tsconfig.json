{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/api/*": ["app/api/*"],
      "@/components": ["app/components/index"],
      "@/constants": ["app/constants"],
      "@/core/*": ["app/core/*"],
      "@/types/*": ["app/types/*"],
      "@/ui": ["app/ui/index"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.mjs",
    "cypress.config.ts"
  ]
}
