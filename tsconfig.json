{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@/constants": ["./src/app/core/config/constants"],
      "@/types/api": ["./src/app/types/api.types"],
      "@/types/arranger": ["./src/app/types/arranger.types"],
      "@/types/fs": ["./src/app/types/fs.types"],
      "@/types/instrument": ["./src/app/types/instrument.types"],
      "@/types/midi": ["./src/app/types/midi.types"],
      "@/types/project": ["./src/app/types/project.types"],
      "@/types/mixer": ["./src/app/types/mixer.types"],
      "@/types/track": ["./src/app/types/track.types"],
      "@/types/utility": ["./src/app/types/utility.types"],
      "@/ui": ["./src/app/ui/index"],
      "@/ui/*": ["./src/app/ui/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.mjs",
    "src/test/unit/**/*.tsx"
  ]
}
