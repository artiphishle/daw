{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/api/*": ["app/api/*"],
      "@/common/*": ["app/_common/*"],
      "@/components": ["app/_components/index"],
      "@/components/*": ["app/_components/*"],
      "@/constants/*": ["app/_common/constants/*"],
      "@/core/*": ["app/_core/*"],
      "@/core/hooks/*": ["app/_core/hooks/*"],
      "@/pfui": ["packages/pfui/index"],
      "@/pfui/*": ["packages/pfui/*"],
      "@/types/*": ["app/_common/types/*"]
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "cypress.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
